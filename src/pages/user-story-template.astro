/* Global Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Roboto', sans-serif;
  line-height: 1.6;
  color: var(--bodyTextColor);
  background: #fff;
}

/* Container */
.cs-container {
  width: 100%;
  max-width: 80rem;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Section Headers */
.section-header {
  text-align: center !important;
  margin-bottom: 4rem;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cs-title {
  font-size: clamp(2rem, 4vw, 3rem);
