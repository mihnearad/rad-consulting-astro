---
import BaseLayout from "../layouts/BaseLayout.astro";
import Contact from "../../components/contact-us.astro";

const title = "Frequently Asked Questions - RAD Digital Solutions";
const description = "Get answers to common questions about our IT consulting, business intelligence, and project management services.";
const keywords = "FAQ, questions, IT consulting FAQ, business intelligence questions, project management FAQ, RAD Digital Solutions";
const canonical = "https://rad-digitalsolutions.com/faq";
const ogImage = "https://rad-digitalsolutions.com/logo_raddigitalsolutions.webp";
const ogUrl = "https://rad-digitalsolutions.com/faq";

const faqs = [
  {
    question: "What services does RAD Digital Solutions offer?",
    answer: "We specialize in IT Consulting & Networking Solutions (infrastructure optimization, network setup, cybersecurity), Business Intelligence Solutions (PowerBI dashboards, data visualization, analytics), and Project Management Solutions (digital project delivery, agile methodology, risk management)."
  },
  {
    question: "How long does a typical project take?",
    answer: "Project timelines vary based on scope and complexity. A network infrastructure upgrade might take 2-4 weeks, a PowerBI dashboard implementation 3-6 weeks, and a comprehensive digital transformation project 3-6 months. We provide a realistic timeline during our initial consultation."
  },
  {
    question: "What tools do you use for business intelligence?",
    answer: "We primarily work with PowerBI for interactive dashboards and visualization, Python for advanced analytics and machine learning, SQL for database management, and AWS for data pipeline infrastructure. We choose the best tools based on your specific requirements."
  },
  {
    question: "Do you offer ongoing support after project completion?",
    answer: "Yes, we provide comprehensive post-implementation support including ongoing maintenance, troubleshooting, system updates, and optimization. We offer flexible support packages tailored to your needs."
  },
  {
    question: "Can you integrate with our existing systems?",
    answer: "Absolutely! We specialize in integrations with existing systems including ERP (SAP, Oracle), CRM platforms, cloud services, databases, and legacy systems. Our solutions work seamlessly with your current technology stack."
  },
  {
    question: "What makes you different from larger consulting firms?",
    answer: "We offer personalized service with direct access to experienced consultants, not junior staff. Our approach emphasizes close collaboration, flexibility, and tailored solutions rather than one-size-fits-all packages."
  },
  {
    question: "How much do your services cost?",
    answer: "We work within various budget ranges and prioritize cost-efficient solutions. During our free consultation, we'll discuss your budget and find the most valuable approach. We offer phased implementations to demonstrate ROI before scaling."
  },
  {
    question: "Do you work with businesses of all sizes?",
    answer: "Yes, we work with small businesses, mid-sized companies, and enterprise organizations across various industries including logistics, manufacturing, professional services, and technology."
  }
];
---

<BaseLayout {title} {description} {keywords} {canonical} {ogImage} {ogUrl}>
  <!-- FAQPage Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqs.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  })} />

  <section id="faq-section">
    <div class="faq-container">
      <div class="faq-header">
        <span class="faq-topper">FAQ</span>
        <h1 class="faq-title">Frequently Asked Questions</h1>
        <p class="faq-subtitle">Find answers to common questions about our services</p>
      </div>

      <div class="faq-accordion">
        {faqs.map((faq, index) => (
          <div class="faq-item" data-index={index}>
            <button class="faq-question" aria-expanded="false">
              <span class="faq-question-text">{faq.question}</span>
              <svg class="faq-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="faq-cta">
        <h3>Still have questions?</h3>
        <p>Get in touch with our team for personalized answers</p>
        <a href="#contact" class="faq-cta-button">Contact Us</a>
      </div>
    </div>
  </section>

  <Contact />
</BaseLayout>

<style>
#faq-section {
  padding: var(--sectionPadding);
  padding-top: 5rem;
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  min-height: 80vh;
}

.faq-container {
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Header */
.faq-header {
  text-align: center;
  margin-bottom: 3rem;
}

.faq-topper {
  font-size: var(--topperFontSize);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-weight: 700;
  color: var(--primaryLight);
  margin-bottom: 0.5rem;
  display: block;
}

.faq-title {
  font-size: clamp(2rem, 4vw, 2.5rem);
  font-weight: 900;
  color: var(--primary);
  margin: 0 0 1rem 0;
  line-height: 1.2;
}

.faq-subtitle {
  font-size: 1.1rem;
  color: var(--bodyTextColor);
  margin: 0;
}

/* Accordion */
.faq-accordion {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-bottom: 4rem;
}

.faq-item {
  background: white;
  border-radius: 1rem;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.faq-item:hover {
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
}

.faq-item.active {
  box-shadow: 0 4px 16px rgba(52, 131, 197, 0.15);
}

.faq-question {
  width: 100%;
  padding: 1.5rem 1.5rem 1.5rem 2rem;
  background: transparent;
  border: none;
  text-align: left;
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--primary);
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1rem;
  transition: all 0.3s ease;
  touch-action: manipulation;
}

.faq-question:hover {
  color: var(--primaryLight);
}

.faq-question-text {
  flex: 1;
  line-height: 1.4;
}

.faq-icon {
  flex-shrink: 0;
  color: var(--primaryLight);
  transition: transform 0.3s ease;
}

.faq-item.active .faq-icon {
  transform: rotate(180deg);
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease, padding 0.4s ease;
}

.faq-item.active .faq-answer {
  max-height: 500px;
  padding: 0 2rem 1.5rem 2rem;
}

.faq-answer p {
  margin: 0;
  font-size: 1rem;
  line-height: 1.6;
  color: var(--bodyTextColor);
}

/* CTA Section */
.faq-cta {
  text-align: center;
  padding: 3rem 2rem;
  background: linear-gradient(135deg, var(--accentLight) 0%, #ffffff 100%);
  border-radius: 1rem;
  margin-top: 2rem;
}

.faq-cta h3 {
  font-size: 1.5rem;
  font-weight: 900;
  color: var(--primary);
  margin: 0 0 0.5rem 0;
}

.faq-cta p {
  font-size: 1rem;
  color: var(--bodyTextColor);
  margin: 0 0 1.5rem 0;
}

.faq-cta-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 1rem 2rem;
  background: var(--primaryLight);
  color: white;
  font-weight: 700;
  font-size: 1rem;
  border-radius: 0.5rem;
  text-decoration: none;
  transition: all 0.3s ease;
  touch-action: manipulation;
}

.faq-cta-button:hover {
  background: var(--primary);
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(52, 131, 197, 0.3);
}

/* Mobile Responsive */
@media screen and (max-width: 768px) {
  #faq-section {
    padding-top: 4rem;
  }

  .faq-question {
    padding: 1.25rem 1rem 1.25rem 1.5rem;
    font-size: 1rem;
  }

  .faq-item.active .faq-answer {
    padding: 0 1.5rem 1.25rem 1.5rem;
  }

  .faq-answer p {
    font-size: 0.9375rem;
  }

  .faq-cta {
    padding: 2rem 1.5rem;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach((item) => {
      const question = item.querySelector('.faq-question');

      if (question) {
        question.addEventListener('click', () => {
          const isActive = item.classList.contains('active');

          // Close all other items
          faqItems.forEach((otherItem) => {
            if (otherItem !== item) {
              otherItem.classList.remove('active');
              const otherButton = otherItem.querySelector('.faq-question');
              if (otherButton) {
                otherButton.setAttribute('aria-expanded', 'false');
              }
            }
          });

          // Toggle current item
          if (isActive) {
            item.classList.remove('active');
            question.setAttribute('aria-expanded', 'false');
          } else {
            item.classList.add('active');
            question.setAttribute('aria-expanded', 'true');
          }
        });
      }
    });
  });
</script>
