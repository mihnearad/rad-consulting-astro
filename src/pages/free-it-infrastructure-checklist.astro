---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Free IT Infrastructure Assessment Checklist - RAD Digital Solutions";
const description = "Download our comprehensive 25-point IT infrastructure assessment checklist. Identify critical gaps, improve security, and optimize your technology stack.";
const keywords = "IT infrastructure checklist, IT assessment, network audit, cybersecurity checklist, infrastructure optimization, IT consulting";
const canonical = "https://rad-digitalsolutions.com/free-it-infrastructure-checklist";
const ogImage = "https://rad-digitalsolutions.com/logo_raddigitalsolutions.webp";
const ogUrl = "https://rad-digitalsolutions.com/free-it-infrastructure-checklist";
---

<BaseLayout {title} {description} {keywords} {canonical} {ogImage} {ogUrl}>
  <section id="checklist-page">
    <div class="checklist-container">
      <!-- Header -->
