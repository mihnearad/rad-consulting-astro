<script>
  // Checklist Score Counter
  const totalItems = 25;
  let checkedCount = 0;

  const scoreNumber = document.getElementById('scoreNumber');
  const scoreStatus = document.getElementById('scoreStatus');
  const checkboxes = document.querySelectorAll('.checklist-item input[type="checkbox"]');

  // Function to get status text based on score
  function getStatusText(score) {
    if (score === 0) return 'Not started';
    if (score >= 20) return 'â­ Excellent!';
    if (score >= 15) return 'âœ“ Good';
    if (score >= 10) return 'âš ï¸ Needs Attention';
    return 'ðŸš¨ Critical';
  }

  // Function to update score display
  function updateScore() {
    checkedCount = document.querySelectorAll('.checklist-item input[type="checkbox"]:checked').length;

    // Animate the number change
    if (scoreNumber) {
      scoreNumber.style.transform = 'scale(1.2)';
      setTimeout(() => {
        scoreNumber.textContent = checkedCount;
        scoreNumber.style.transform = 'scale(1)';
      }, 100);
    }

    // Update status text
    if (scoreStatus) {
      scoreStatus.textContent = getStatusText(checkedCount);
    }

    // Save to localStorage
    const checkedStates = Array.from(checkboxes).map(cb => cb.checked);
    localStorage.setItem('checklistProgress', JSON.stringify(checkedStates));
  }

  // Restore saved progress from localStorage
  function restoreProgress() {
    const saved = localStorage.getItem('checklistProgress');
    if (saved) {
      try {
        const checkedStates = JSON.parse(saved);
        checkboxes.forEach((checkbox, index) => {
          if (checkedStates[index]) {
            checkbox.checked = true;
          }
        });
        updateScore();
      } catch (e) {
        console.error('Error restoring checklist progress:', e);
      }
    }
  }

  // Add event listeners to all checkboxes
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', updateScore);
  });

  // Add smooth transition for score number
  if (scoreNumber) {
    scoreNumber.style.transition = 'transform 0.2s ease';
  }

  // Restore progress on page load
  restoreProgress();

  // Update score initially
  updateScore();
</script>
</BaseLayout>
