---
import Navbar from "../../../components/navbar.astro";
import Footer from "../../../components/footer.astro";
import "../../global.css";
import "../../styles/case-study.css";

const caseStudy = {
  title: "AI-Powered ERP Chatbot with Natural Language Queries",
  category: "Digital Solutions",
  client: "Enterprise Manufacturing Company",
  duration: "5 months",
  image: "https://images.unsplash.com/photo-1531746790731-6c087fecd65a?w=1200&q=80",
  excerpt: "Developed an intelligent Slack bot integrated with customer's SAP ERP system, enabling employees to query complex business data using natural language.",
  challenge: "Employees across departments struggled to access critical business data from the SAP ERP system. The complex SAP interface required specialized training, and simple data queries often needed IT support or lengthy navigation through multiple screens. This created bottlenecks in decision-making and reduced operational efficiency.",
  solution: "We developed a custom Slack bot that integrates directly with the client's SAP ERP system, leveraging OpenAI's API to interpret natural language queries. Employees can now ask questions in plain language through Slack, and the bot translates these queries into SAP transactions, retrieves the data, and presents it in an easy-to-understand format.",
  results: [
    { metric: "Natural", description: "Language query processing" },
    { metric: "SAP", description: "Full ERP integration" },
    { metric: "Instant", description: "Data retrieval times" }
  ],
  technologies: ["Slack SDK", "OpenAI API", "SAP Integration", "Python", "OAuth"],
  outcomes: [
    "Employees can query SAP data using everyday language without specialized training",
    "Reduced average data retrieval time from 15 minutes to under 30 seconds",
    "IT support requests for basic SAP queries decreased by 70%",
    "Improved decision-making speed across sales, operations, and finance departments",
    "Secure OAuth integration ensures data access follows existing SAP permissions"
  ]
};
---

<html lang="en">
  <head>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('consent', 'default', {
        'analytics_storage': 'denied',
        'ad_storage': 'denied',
        'ad_user_data': 'denied',
        'ad_personalization': 'denied',
        'wait_for_update': 500
      });
    </script>
    <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-PNSZZ2K5');</script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{caseStudy.title} | RAD Digital Solutions</title>
    <meta name="description" content={caseStudy.excerpt}>
    <link rel="canonical" href="https://rad-digitalsolutions.com/use-cases/erp-chatbot-integration">
  </head>
  <body>
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PNSZZ2K5"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

    <Navbar />

    <section class="case-hero">
      <div class="cs-container">
        <nav class="breadcrumbs">
          <a href="/">Home</a> / <a href="/use-cases">Use Cases</a> / <span>{caseStudy.title}</span>
        </nav>
        <span class="cs-topper">{caseStudy.category}</span>
        <h1 class="case-title">{caseStudy.title}</h1>
        <div class="case-meta">
          <span><strong>Client:</strong> {caseStudy.client}</span>
          <span><strong>Duration:</strong> {caseStudy.duration}</span>
        </div>
      </div>
    </section>

    <section class="case-image-section">
      <div class="cs-container">
        <img src={caseStudy.image} alt={caseStudy.title} class="hero-image" />
      </div>
    </section>

    <section class="case-results-highlight">
      <div class="cs-container">
        <h2>Key Results</h2>
        <div class="results-grid">
          {caseStudy.results.map(result => (
            <div class="result-card">
              <div class="result-metric">{result.metric}</div>
              <div class="result-description">{result.description}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="case-details">
      <div class="cs-container">
        <div class="detail-block">
          <h2>The Challenge</h2>
          <p>{caseStudy.challenge}</p>
        </div>

        <div class="detail-block">
          <h2>Our Solution</h2>
          <p>{caseStudy.solution}</p>
        </div>

        <div class="detail-block">
          <h2>Technologies Used</h2>
          <div class="tech-stack">
            {caseStudy.technologies.map(tech => (
              <span class="tech-badge">{tech}</span>
            ))}
          </div>
        </div>

        <div class="detail-block">
          <h2>Outcomes & Impact</h2>
          <ul class="outcomes-list">
            {caseStudy.outcomes.map(outcome => (
              <li>{outcome}</li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <section class="case-cta">
      <div class="cs-container">
        <h2>Ready to Leverage AI for Your Business?</h2>
        <p>Let's explore how intelligent automation can transform your operations.</p>
        <a href="/#contact" class="cta-button">Get in Touch</a>
      </div>
    </section>

    <Footer />
    <script src="/klaro-config.js" defer></script>
    <script src="https://cdn.kiprotect.com/klaro/v0.7/klaro.js" defer></script>
  </body>
</html>
