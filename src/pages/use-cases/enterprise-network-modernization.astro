---
import Navbar from "../../../components/navbar.astro";
import Footer from "../../../components/footer.astro";
import "../../global.css";
import "../../styles/case-study.css";

// Case Study Metadata
const caseStudy = {
  title: "Enterprise Network Modernization with Ubiquiti UniFi",
  category: "IT Consulting",
  client: "Manufacturing & Distribution Company",
  duration: "6 weeks",
  featured: true,
  image: "https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=800&q=80&fm=webp",
  excerpt: "Successfully migrated a company from legacy network hardware to cutting-edge Ubiquiti UniFi infrastructure with full WiFi 6 coverage.",
  results: [
    { metric: "100%", description: "Network coverage in office & workshop" },
    { metric: "WiFi 6", description: "Latest wireless standard deployed" },
    { metric: "Zero", description: "Downtime during migration" }
  ],
  technologies: ["Ubiquiti UniFi", "WiFi 6", "Network Architecture", "UniFi Controller", "PoE"],
  challenge: "The client was operating on outdated network hardware that caused frequent connectivity issues, dead zones in their warehouse, and slow data transfer speeds. The aging infrastructure was also a security concern and couldn't support modern business requirements.",
  solution: "We designed a comprehensive network upgrade using Ubiquiti UniFi ecosystem, implementing WiFi 6 access points strategically placed throughout the office and workshop areas. The migration was executed during off-hours to ensure zero downtime, with complete coverage mapping and testing before go-live.",
  outcomes: [
    "Complete elimination of network dead zones across all facilities",
    "WiFi 6 technology provides faster speeds and better device handling for IoT equipment",
    "Centralized UniFi Controller enables easy network management and monitoring",
    "Seamless roaming between access points improved mobile device productivity",
    "Enhanced security features protect against modern network threats"
  ]
};
---

<html lang="en">
  <head>
    <!-- Google Consent Mode - Must load BEFORE GTM -->
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      
      gtag('consent', 'default', {
        'analytics_storage': 'denied',
        'ad_storage': 'denied',
        'ad_user_data': 'denied',
        'ad_personalization': 'denied',
        'wait_for_update': 500
      });
    </script>
    
    <!-- Google Tag Manager -->
    <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-PNSZZ2K5');</script>
    <!-- End Google Tag Manager -->
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{caseStudy.title} - RAD Digital Solutions</title>
    <meta name="description" content={caseStudy.excerpt}>
    <link rel="canonical" href={`https://rad-digitalsolutions.com/use-cases/${caseStudy.title.toLowerCase().replace(/\s+/g, '-')}`}>
    <link rel="icon" href="/logo_raddigitalsolutions.webp" type="image/webp" />
    
    <!-- Breadcrumb Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://rad-digitalsolutions.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Use Cases",
          "item": "https://rad-digitalsolutions.com/use-cases"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "Enterprise Network Modernization",
          "item": "https://rad-digitalsolutions.com/use-cases/enterprise-network-modernization"
        }
      ]
    }
    </script>
    
    <!-- Article Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "Enterprise Network Modernization with Ubiquiti UniFi",
      "image": "https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=800&q=80&fm=webp",
      "author": {
        "@type": "Organization",
        "name": "RAD Digital Solutions",
        "url": "https://rad-digitalsolutions.com"
      },
      "publisher": {
        "@type": "Organization",
        "name": "RAD Digital Solutions",
        "logo": {
          "@type": "ImageObject",
          "url": "https://rad-digitalsolutions.com/logo_raddigitalsolutions.webp"
        }
      },
      "datePublished": "2024-01-15",
      "dateModified": "2025-10-07",
      "description": "Successfully migrated a company from legacy network hardware to cutting-edge Ubiquiti UniFi infrastructure with full WiFi 6 coverage."
    }
    </script>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PNSZZ2K5"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    
    <Navbar />
    
    <section class="case-hero">
      <div class="cs-container">
        <nav class="breadcrumbs">
          <a href="/">Home</a> / <a href="/use-cases">Use Cases</a> / <span>{caseStudy.title}</span>
        </nav>
        <span class="cs-topper">{caseStudy.category}</span>
        <h1 class="case-title">{caseStudy.title}</h1>
        <div class="case-meta">
          <span><strong>Client:</strong> {caseStudy.client}</span>
          <span><strong>Duration:</strong> {caseStudy.duration}</span>
        </div>
      </div>
    </section>

    <section class="case-image-section">
      <div class="cs-container">
        <img src={caseStudy.image} alt={caseStudy.title} class="hero-image" loading="lazy" decoding="async" />
      </div>
    </section>

    <section class="case-results-highlight">
      <div class="cs-container">
        <h2>Key Results</h2>
        <div class="results-grid">
          {caseStudy.results.map(result => (
            <div class="result-card">
              <div class="result-metric">{result.metric}</div>
              <div class="result-description">{result.description}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="case-details">
      <div class="cs-container">
        <div class="detail-block">
          <h2>The Challenge</h2>
          <p>{caseStudy.challenge}</p>
        </div>

        <div class="detail-block">
          <h2>Our Solution</h2>
          <p>{caseStudy.solution}</p>
        </div>

        <div class="detail-block">
          <h2>Technologies Used</h2>
          <div class="tech-stack">
            {caseStudy.technologies.map(tech => (
              <span class="tech-badge">{tech}</span>
            ))}
          </div>
        </div>

        <div class="detail-block">
          <h2>Outcomes & Impact</h2>
          <ul class="outcomes-list">
            {caseStudy.outcomes.map(outcome => (
              <li>{outcome}</li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <section class="case-cta">
      <div class="cs-container">
        <h2>Ready to Modernize Your Network?</h2>
        <p>Let's discuss how we can upgrade your infrastructure for the modern age.</p>
        <a href="/#contact" class="cta-button">Get in Touch</a>
      </div>
    </section>

    <Footer />


    <script src="/klaro-config.js" defer></script>
    <script src="https://cdn.kiprotect.com/klaro/v0.7/klaro.js" defer></script>
  </body>
</html>





