---
import Navbar from "../../components/navbar.astro";
import Hero from "../../components/hero.astro";
import Services from "../../components/Services/services.astro";
import About from "../../components/about.astro";
import WhyChooseUs from "../../components/our-process.astro";
import Contact from "../../components/contact-us.astro";
import Footer from "../../components/footer.astro";
import "../global.css";
---

<html lang="en">
  <head>
    <!-- Essential Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary SEO Meta Tags -->
    <title>RAD Digital Solutions - IT Consulting, Data Analysis & Project Management Services</title>
    <meta name="title" content="RAD Digital Solutions - IT Consulting, Data Analysis & Project Management Services" />
    <meta name="description" content="Professional IT consulting, data analysis, and project management services. We help businesses optimize technology, analyze data with PowerBI & Python, and deliver projects on time." />
    <meta name="keywords" content="IT consulting, data analysis, project management, PowerBI, Python, business intelligence, technology consulting, data pipelines, IT support" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="author" content="RAD Digital Solutions" />
    <link rel="canonical" href="https://rad-digitalsolutions.com/" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://rad-digitalsolutions.com/" />
    <meta property="og:title" content="RAD Digital Solutions - IT Consulting, Data Analysis & Project Management Services" />
    <meta property="og:description" content="Professional IT consulting, data analysis, and project management services. We help businesses optimize technology, analyze data with PowerBI & Python, and deliver projects on time." />
    <meta property="og:image" content="https://rad-digitalsolutions.com/RAD_Logo_V2_1.webp" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="RAD Digital Solutions" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://rad-digitalsolutions.com/" />
    <meta name="twitter:title" content="RAD Digital Solutions - IT Consulting, Data Analysis & Project Management Services" />
    <meta name="twitter:description" content="Professional IT consulting, data analysis, and project management services. We help businesses optimize technology, analyze data with PowerBI & Python, and deliver projects on time." />
    <meta name="twitter:image" content="https://rad-digitalsolutions.com/RAD_Logo_V2_1.webp" />
    
    <!-- Favicon and Icons -->
    <link rel="icon" href="/logo_raddigitalsolutions.png" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/logo_raddigitalsolutions.png" />
    
    <!-- Sitemap and Search Console -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Preload Critical Resources -->
    <link rel="preload" as="image" href="/Background.webp" fetchpriority="high" />
    <link rel="preload" as="video" href="/DigitalVideo.mp4" fetchpriority="high" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "RAD Digital Solutions",
        "description": "Professional IT consulting, data analysis, and project management services",
        "url": "https://rad-digitalsolutions.com",
        "logo": "https://rad-digitalsolutions.com/RAD_Logo_V2_1.webp",
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer service",
          "url": "https://rad-digitalsolutions.com/#contact"
        },
        "sameAs": [],
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "US"
        },
        "service": [
          {
            "@type": "Service",
            "name": "IT Consulting",
            "description": "Professional IT consulting services to help optimize your technology infrastructure",
            "url": "https://rad-digitalsolutions.com/services/it-consulting"
          },
          {
            "@type": "Service", 
            "name": "Data Analysis",
            "description": "Advanced data analysis and pipeline management using PowerBI and Python",
            "url": "https://rad-digitalsolutions.com/services/data-analysis"
          },
          {
            "@type": "Service",
            "name": "Project Management", 
            "description": "IT project management services delivering projects on time and within budget",
            "url": "https://rad-digitalsolutions.com/services/project-management"
          }
        ]
      }
    </script>

    <!-- Klaro Cookie Consent -->
    <script is:inline src="/klaro-config.js"></script>
    <script is:inline src="https://cdn.kiprotect.com/klaro/v0.7/klaro.js"></script>
  </head>
  <body>
    <!-- Klaro Cookie Consent -->
    <div id="klaro"></div>
    
    <Navbar />
    <section id="home">
      <Hero />
    </section>
    <section id="services-343">
      <Services />
    </section>
    <section id="why-choose-us">
      <WhyChooseUs />
    </section>
    <section id="about">
      <About />
    </section>
    <section id="faq">
      <!-- FAQ goes here -->
    </section>
    <section id="contact">
      <Contact />
    </section>
    <Footer />
  </body>
</html>
