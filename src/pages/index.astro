---
import Navbar from "../../components/navbar.astro";
import Hero from "../../components/hero.astro";
import Services from "../../components/Services/services.astro";
import About from "../../components/about.astro";
import WhyChooseUs from "../../components/our-process.astro";
import Contact from "../../components/contact-us.astro";
import Footer from "../../components/footer.astro";
import "../global.css";
---

<html lang="en">
  <head>
    <!-- Essential Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary SEO Meta Tags -->
    <title>RAD Digital Solutions - Digital Services, IT Consulting & Project Management Solutions</title>
    <meta name="title" content="RAD Digital Solutions - Digital Services, IT Consulting & Project Management Solutions" />
    <meta name="description" content="Professional digital services including IT consulting, data analysis, project management solutions, and networking solutions. We deliver digital transformation, optimize technology infrastructure, and provide expert project solutions for business success." />
    <meta name="keywords" content="digital services, IT consulting, project management, digital solutions, networking solutions, project solutions, data analysis, PowerBI, Python, business intelligence, technology consulting, network infrastructure, IT support, digital transformation" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="author" content="RAD Digital Solutions" />
    <link rel="canonical" href="https://rad-digitalsolutions.com/" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://rad-digitalsolutions.com/" />
    <meta property="og:title" content="RAD Digital Solutions - Digital Services, IT Consulting & Project Management Solutions" />
    <meta property="og:description" content="Professional digital services including IT consulting, data analysis, project management solutions, and networking solutions. We deliver digital transformation and expert project solutions for business success." />
    <meta property="og:image" content="https://rad-digitalsolutions.com/RAD_Logo_V2_1.webp" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="RAD Digital Solutions" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://rad-digitalsolutions.com/" />
    <meta name="twitter:title" content="RAD Digital Solutions - Digital Services, IT Consulting & Project Management Solutions" />
    <meta name="twitter:description" content="Professional digital services including IT consulting, project management solutions, networking solutions, and digital transformation expertise for business success." />
    <meta name="twitter:image" content="https://rad-digitalsolutions.com/RAD_Logo_V2_1.webp" />
    
    <!-- Favicon and Icons -->
    <link rel="icon" href="/logo_raddigitalsolutions.png" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/logo_raddigitalsolutions.png" />
    
    <!-- Sitemap and Search Console -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Preload Critical Resources -->
    <link rel="preload" as="image" href="/Background.webp" fetchpriority="high" />
    <link rel="preload" as="video" href="/DigitalVideo.mp4" fetchpriority="high" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Optimize third-party connections -->
    <link rel="preconnect" href="https://cdn.kiprotect.com" />
    <link rel="dns-prefetch" href="https://cdn.kiprotect.com" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    <link rel="preconnect" href="https://images.unsplash.com" />
    <link rel="dns-prefetch" href="https://images.unsplash.com" />
    
    <!-- Critical CSS for above-the-fold content -->
    <style>
      /* Critical CSS for immediate rendering */
      body { margin: 0; font-family: 'Inter', sans-serif; }
      .hero { position: relative; min-height: 100vh; display: flex; align-items: center; justify-content: center; }
      .hero-bg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: #011426; z-index: 0; }
      .hero-video { position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: 1; }
      .hero-content { position: relative; z-index: 3; text-align: center; color: white; max-width: 800px; }
      .hero-title { font-size: clamp(2.5rem, 5vw, 4rem); margin-bottom: 1rem; font-weight: 900; }
      .hero-button { background: #3483C5; color: white; padding: 0.75rem 1.5rem; border: none; border-radius: 0.25rem; font-weight: 700; cursor: pointer; }
    </style>
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "RAD Digital Solutions",
        "description": "Leading provider of digital services, IT consulting, project management solutions, networking solutions, and digital transformation services for businesses worldwide",
        "url": "https://rad-digitalsolutions.com",
        "logo": "https://rad-digitalsolutions.com/RAD_Logo_V2_1.webp",
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer service",
          "url": "https://rad-digitalsolutions.com/#contact"
        },
        "sameAs": [],
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "US"
        },
        "service": [
          {
            "@type": "Service",
            "name": "IT Consulting & Networking Solutions",
            "description": "Professional IT consulting and networking solutions to help optimize your technology infrastructure and deliver comprehensive digital services",
            "url": "https://rad-digitalsolutions.com/services/it-consulting"
          },
          {
            "@type": "Service", 
            "name": "Data Analysis",
            "description": "Advanced data analysis and pipeline management using PowerBI and Python",
            "url": "https://rad-digitalsolutions.com/services/data-analysis"
          },
          {
            "@type": "Service",
            "name": "Project Management Solutions", 
            "description": "Comprehensive project management solutions and digital project delivery services ensuring on-time and on-budget completion",
            "url": "https://rad-digitalsolutions.com/services/project-management"
          }
        ]
      }
    </script>
  </head>
  <body>
    <!-- Klaro Cookie Consent -->
    <div id="klaro"></div>
    
    <Navbar />
    <section id="home">
      <Hero />
    </section>
    <section id="services-343">
      <Services />
    </section>
    <section id="why-choose-us">
      <WhyChooseUs />
    </section>
    <section id="about">
      <About />
    </section>
    <section id="faq">
      <!-- FAQ goes here -->
    </section>
    <section id="contact">
      <Contact />
    </section>
    <Footer />

    <!-- Load Klaro Cookie Consent scripts after page content -->
    <script src="/klaro-config.js" defer></script>
    <script src="https://cdn.kiprotect.com/klaro/v0.7/klaro.js" defer></script>
  </body>
  </body>
</html>
