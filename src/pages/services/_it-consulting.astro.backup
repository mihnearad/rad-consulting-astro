}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
  .benefits .cs-container,
  .services .cs-container,
  .process .cs-container,
  .cta .cs-container {
    max-width: 90rem;
  }

  .benefits-grid {
    grid-template-columns: repeat(2, 1fr);
    max-width: none;
  }

  .services-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .process-timeline {
    max-width: 60rem;
  }

  .step-content {
    padding: 2.5rem;
  }
}

/* Mobile - 480px */
@media only screen and (max-width: 30rem) {
  .timeline-line {
    left: 1.5rem;
  }

  .process-step {
    gap: 1.5rem;
  }

  .step-number {
    width: 3rem;
    height: 3rem;
    font-size: 1.2rem;
    border: 2px solid white;
  }

  .step-content {
    padding: 1.5rem;
  }

  .step-content::before,
  .step-content::after {
    left: -10px;
    border-width: 10px 10px 10px 0;
  }

  .step-title {
    font-size: 1.25rem;
  }
}

/* Desktop - 1300px */
@media only screen and (min-width: 81.25rem) {
  .services-grid {
    grid-template-columns: repeat(3, 1fr);
  }

  .benefits-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
</style>