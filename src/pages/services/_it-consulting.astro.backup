.timeline-line {
  position: absolute;
  left: 2rem;
  top: 2rem;
  bottom: 2rem;
  width: 3px;
  background: linear-gradient(to bottom, var(--primary), var(--primaryLight));
  border-radius: 2px;
  z-index: 0;
}

.process-step {
  position: relative;
  display: flex;
  align-items: flex-start;
  gap: 2rem;
  margin-bottom: 3rem;
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.6s ease forwards;
}

.process-step:nth-child(2) { animation-delay: 0.1s; }
.process-step:nth-child(3) { animation-delay: 0.2s; }
.process-step:nth-child(4) { animation-delay: 0.3s; }
.process-step:nth-child(5) { animation-delay: 0.4s; }
.process-step:nth-child(6) { animation-delay: 0.5s; }
.process-step:nth-child(7) { animation-delay: 0.6s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.process-step:last-child {
  margin-bottom: 0;
}

.step-marker {
  position: relative;
  z-index: 10;
  flex-shrink: 0;
}

.step-number {
  width: 4rem;
  height: 4rem;
  background: linear-gradient(135deg, var(--primary), var(--primaryLight));
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.5rem;
  box-shadow: 0 4px 20px rgba(1, 20, 38, 0.2);
  transition: all 0.3s ease;
  position: relative;
  z-index: 12;
  border: 3px solid white;
}

.step-number::before {
  content: '';
  position: absolute;
  inset: -3px;
  background: linear-gradient(135deg, var(--primary), var(--primaryLight));
  border-radius: 50%;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.process-step:hover .step-number {
  transform: scale(1.1);
  box-shadow: 0 8px 30px rgba(1, 20, 38, 0.3);
}

.process-step:hover .step-number::before {
  opacity: 1;
}

.step-content {
  flex: 1;
  background: white;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(1, 20, 38, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

.step-content::before {
  content: '';
  position: absolute;
  left: -12px;
  top: 2rem;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 12px 12px 12px 0;
  border-color: transparent white transparent transparent;
  z-index: 2;
}

.step-content::after {
  content: '';
  position: absolute;
  left: -13px;
  top: 2rem;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 12px 12px 12px 0;
  border-color: transparent rgba(1, 20, 38, 0.1) transparent transparent;
  z-index: 1;
}

.process-step:hover .step-content {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
}

.step-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--headerColor);
  position: relative;
}

.step-title::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 0;
  width: 3rem;
  height: 3px;
  background: linear-gradient(to right, var(--primary), var(--primaryLight));
