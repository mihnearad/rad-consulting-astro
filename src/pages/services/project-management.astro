<style>
/* Global Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Roboto', sans-serif;
  line-height: 1.6;
  color: var(--bodyTextColor);
  background: #fff;
}

/* Container */
.cs-container {
  width: 100%;
  max-width: 80rem;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Section Headers */
.section-header {
  text-align: center !important;
  margin-bottom: 4rem;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cs-title {
  font-size: clamp(2rem, 4vw, 3rem);
  margin-bottom: 1rem;
  font-weight: 900;
  color: var(--headerColor);
  line-height: 1.2;
  text-align: center !important;
  width: 100%;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.cs-text {
  font-size: 1.25rem;
  color: var(--bodyTextColor);
  max-width: 600px;
  margin: 0 auto;
  opacity: 0.8;
  text-align: center !important;
}

/* Hero Section */
.hero {
  position: relative;
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 6rem 0;
  overflow: hidden;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primaryLight) 100%);
  background-size: cover;
  background-position: center;
  z-index: 1;
}

.hero-background::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(1, 20, 38, 0.6);
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
}

.hero-title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  margin-bottom: 1rem;
  line-height: 1.2;
  font-weight: 900;
  color: white;
  text-align: center;
}

.hero-subtitle {
  font-size: clamp(1.1rem, 2.5vw, 1.5rem);
  margin-bottom: 2rem;
  line-height: 1.5;
  color: rgba(255, 255, 255, 0.9);
}

.hero-button {
  display: inline-block;
  font-size: 1rem;
  line-height: 1.2em;
  text-decoration: none;
  font-weight: 700;
  text-align: center;
  margin: 0;
  color: #fff;
  min-width: 9.375rem;
  padding: 0.75rem 1.5rem;
  background-color: var(--primary);
  border-radius: 0.25rem;
  overflow: hidden;
  position: relative;
  z-index: 1;
  transition: color 0.3s;
}

.hero-button:before {
  content: '';
  position: absolute;
  height: 100%;
  width: 0%;
  top: 0;
  left: 0;
  background: var(--primaryLight);
  border-radius: 0.25rem;
  z-index: -1;
  transition: width 0.3s;
}

.hero-button:hover:before {
  width: 100%;
}

/* Benefits Section */
.benefits {
  padding: 5rem 0;
  background: #f8f9fa;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
}

.benefit-item {
  background: white;
  padding: 2.5rem 2rem;
  border-radius: 1rem;
  text-align: center;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.benefit-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.benefit-icon {
  font-size: 3rem;
  margin-bottom: 1.5rem;
  display: inline-block;
}

.benefit-title {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: var(--headerColor);
  font-weight: 700;
}

.benefit-description {
  color: var(--bodyTextColor);
  opacity: 0.8;
  line-height: 1.6;
}

/* Services Section */
.services {
  padding: 5rem 0;
}

.services-grid {
  width: 100%;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
}

.service-card {
  background: white;
  padding: 2.5rem 2rem;
  border-radius: 1rem;
  text-align: center;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid #e9ecef;
}

.service-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
}

.service-icon {
  font-size: 3.5rem;
  margin-bottom: 1.5rem;
  display: inline-block;
  color: var(--primary);
}

.service-title {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: var(--headerColor);
  font-weight: 700;
}

.service-description {
  color: var(--bodyTextColor);
  opacity: 0.8;
  line-height: 1.6;
}

/* Process Section */
.process {
  padding: 5rem 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.process-timeline {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 0;
}

.timeline-line {
  position: absolute;
  left: 2rem;
  top: 2rem;
  width: 3px;
  height: calc(100% - 12rem);
  background: linear-gradient(to bottom, var(--primary), var(--primaryLight));
  border-radius: 2px;
  z-index: 0;
}

.process-step {
  display: flex;
  gap: 2rem;
  margin-bottom: 3rem;
  position: relative;
  opacity: 0;
  animation: fadeInUp 0.6s ease forwards;
}

.process-step:last-child {
  margin-bottom: 0;
}

.process-step:nth-child(2) {
  animation-delay: 0.2s;
}

.process-step:nth-child(3) {
  animation-delay: 0.4s;
}

.process-step:nth-child(4) {
  animation-delay: 0.6s;
}

.process-step:nth-child(5) {
  animation-delay: 0.8s;
}

.step-marker {
  position: relative;
  z-index: 10;
  flex-shrink: 0;
}

.step-number {
  width: 4rem;
  height: 4rem;
  background: linear-gradient(135deg, var(--primary), var(--primaryLight));
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.5rem;
  box-shadow: 0 4px 20px rgba(1, 20, 38, 0.2);
  transition: all 0.3s ease;
  position: relative;
  z-index: 12;
  border: 3px solid white;
}

.step-number:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 25px rgba(1, 20, 38, 0.3);
}

.step-content {
  background: white;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.3s ease;
  flex: 1;
}

.step-content::before {
  content: '';
  position: absolute;
  left: -10px;
  top: 2rem;
  width: 0;
  height: 0;
  border-top: 10px solid transparent;
  border-bottom: 10px solid transparent;
  border-right: 10px solid white;
}

.step-content:hover {
  transform: translateX(10px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.step-title {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: var(--headerColor);
  font-weight: 700;
}

.step-description {
  color: var(--bodyTextColor);
  opacity: 0.8;
  line-height: 1.6;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* CTA Section */
.cta {
  padding: 5rem 0;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primaryLight) 100%);
  text-align: center;
  color: white;
}

.cta-content {
  max-width: 600px;
  margin: 0 auto;
}

.cta-title {
  font-size: clamp(2rem, 4vw, 3rem);
  margin-bottom: 1rem;
  font-weight: 900;
  line-height: 1.2;
  text-align: center !important;
}

.cta-description {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  opacity: 0.9;
  line-height: 1.6;
}

.cta-button {
  display: inline-block;
  font-size: 1.1rem;
  line-height: 1.2em;
  text-decoration: none;
  font-weight: 700;
  text-align: center;
  margin: 0;
  color: var(--primary);
  min-width: 12rem;
  padding: 1rem 2rem;
  background-color: white;
  border-radius: 0.5rem;
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 25px rgba(0, 0, 0, 0.2);
  color: var(--primaryLight);
}

/* Responsive Design */

/* Tablet - 768px */
@media only screen and (max-width: 48rem) {
  .cs-container {
    padding: 0 1.5rem;
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .benefits-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .service-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .process-timeline {
    padding: 1rem 0;
  }

  .timeline-line {
    left: 1.5rem;
  }

  .process-step {
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .step-number {
    width: 3.5rem;
    height: 3.5rem;
    font-size: 1.3rem;
  }
}

/* Mobile - 480px */
@media only screen and (max-width: 30rem) {
  .timeline-line {
    left: 1.5rem;
  }

  .process-step {
    gap: 1.5rem;
  }

  .step-number {
    width: 3rem;
    height: 3rem;
    font-size: 1.2rem;
    border: 2px solid white;
  }
}
</style>