/* Process Section */
.process {
  padding: 5rem 0;
}

.process-timeline {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 0;
}

.timeline-line {
  position: absolute;
  left: 2rem;
  top: 2rem;
  width: 3px;
  height: calc(100% - 12rem);
  background: linear-gradient(to bottom, var(--primary), var(--primaryLight));
  border-radius: 2px;
  z-index: 0;
}

.process-step {
  display: flex;
  gap: 2rem;
  margin-bottom: 3rem;
  position: relative;
  opacity: 0;
  animation: fadeInUp 0.6s ease forwards;
}

.process-step:last-child {
  margin-bottom: 0;
}

.process-step:nth-child(2) {
  animation-delay: 0.2s;
}

.process-step:nth-child(3) {
  animation-delay: 0.4s;
}

.process-step:nth-child(4) {
  animation-delay: 0.6s;
}

.process-step:nth-child(5) {
  animation-delay: 0.8s;
}

.step-marker {
  position: relative;
  z-index: 10;
  flex-shrink: 0;
}

.step-number {
  width: 4rem;
  height: 4rem;
  background: linear-gradient(135deg, var(--primary), var(--primaryLight));
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.5rem;
  box-shadow: 0 4px 20px rgba(1, 20, 38, 0.2);
  transition: all 0.3s ease;
  position: relative;
  z-index: 12;
  border: 3px solid white;
}

.step-number:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 25px rgba(1, 20, 38, 0.3);
}

.step-content {
  background: white;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.3s ease;
  flex: 1;
}

.step-content::before {
  content: '';
  position: absolute;
  left: -10px;
  top: 2rem;
  width: 0;
  height: 0;
  border-top: 10px solid transparent;
  border-bottom: 10px solid transparent;
  border-right: 10px solid white;
}

.step-content:hover {
  transform: translateX(10px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
