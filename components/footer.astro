  <style>
    /* Mobile - 360px */
    @media only screen and (min-width: 0rem) {
      #cs-footer {
        padding: var(--sectionPadding);
        background-color: var(--primary);
        color: var(--bodyTextColorWhite);
        position: relative;
      }
      
      #cs-footer .cs-container {
        width: 100%;
        max-width: 80rem;
        margin: auto;
        display: flex;
        flex-direction: column;
        gap: 3rem;
      }
      
      #cs-footer .cs-top {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
      }
      
      #cs-footer .cs-logo-group {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start; /* Align logo and text to start */
      }
      
      #cs-footer .cs-logo {
        display: flex;
        align-items: center;
      }
      
      #cs-footer .cs-logo img {
        width: auto;
        height: 3rem;
        max-width: 12rem;
        object-fit: contain;
      }
      
      #cs-footer .cs-text {
        max-width: 25rem;
        font-size: var(--bodyFontSize);
        line-height: 1.5em;
        color: var(--bodyTextColorWhite);
        opacity: 0.8;
        margin: 0;
      }
      
      #cs-footer .cs-ul-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      
      #cs-footer .cs-header {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--bodyTextColorWhite);
        margin: 0;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--primaryLight);
        display: inline-block;
        width: fit-content;
      }
      
      #cs-footer .cs-ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }
      
      #cs-footer .cs-li {
        list-style: none;
      }
      
      #cs-footer .cs-link {
        font-size: 1rem;
        line-height: 1.5em;
        text-decoration: none;
        color: var(--bodyTextColorWhite);
        opacity: 0.8;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      
      #cs-footer .cs-link:hover {
        opacity: 1;
        color: var(--primaryLight);
        transform: translateX(0.25rem);
      }
      
      #cs-footer .cs-contact {
        font-weight: 600;
      }
      
      #cs-footer .cs-contact-icon {
        font-size: 1.1rem;
        width: 1.5rem;
        display: inline-flex;
        justify-content: center;
      }
      
      #cs-footer .cs-bottom {
        width: 100%;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        display: flex;
        flex-direction: column;
        gap: 1rem;
        text-align: center;
      }
      
      #cs-footer .cs-credit {
        font-size: 0.875rem;
        color: var(--bodyTextColorWhite);
        opacity: 0.7;
      }
      
      #cs-footer .cs-credit-link {
        color: var(--primaryLight);
        text-decoration: none;
        font-weight: 600;
        transition: opacity 0.3s ease;
      }
      
      #cs-footer .cs-credit-link:hover {
        opacity: 0.8;
      }
      
      #cs-footer .cs-bottom-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
      }
      
      #cs-footer .cs-bottom-link {
        font-size: 0.875rem;
        color: var(--bodyTextColorWhite);
        text-decoration: none;
        opacity: 0.7;
        transition: all 0.3s ease;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        font-family: inherit;
      }
      
      #cs-footer .cs-bottom-link:hover {
        opacity: 1;
        color: var(--primaryLight);
      }
    }

    /* Tablet - 768px */
    @media only screen and (min-width: 48rem) {
      #cs-footer .cs-top {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
      }
      
      #cs-footer .cs-logo-group {
        grid-column: 1 / -1;
      }
      
      #cs-footer .cs-bottom {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        text-align: left;
      }
    }

    /* Desktop - 1024px */
    @media only screen and (min-width: 64rem) {
      #cs-footer .cs-top {
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 4rem;
      }
      
      #cs-footer .cs-logo-group {
        grid-column: 1;
      }
      
      #cs-footer .cs-logo img {
        height: 3.5rem;
        max-width: 14rem;
      }
      
      #cs-footer .cs-text {
        max-width: 30rem;
      }
    }
  </style>
</footer>
