      display: inline-block;
      padding: 1rem 2rem;
      background: var(--primary);
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    #use-cases .cs-view-all-button:hover {
      background: var(--primaryLight);
      transform: translateY(-2px);
    }
