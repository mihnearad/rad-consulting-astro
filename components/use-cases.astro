      flex-direction: column;
      gap: 0.75rem;
    }
    
    #use-cases .cs-case-results li {
      font-size: 0.875rem;
      color: var(--bodyTextColor);
      display: flex;
      align-items: flex-start;
      gap: 0.625rem;
      line-height: 1.5;
    }
    
    #use-cases .cs-case-results li:before {
      content: '✓';
      display: inline-block;
      width: 1.25rem;
      height: 1.25rem;
      background: var(--primary);
      color: white;
      border-radius: 50%;
      text-align: center;
      line-height: 1.25rem;
