      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
    
    #use-cases .cs-case-card:hover .cs-case-image img {
      transform: scale(1.1);
    }
    
    #use-cases .cs-case-tag {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: var(--primary);
      color: white;
      padding: 0.375rem 0.875rem;
      border-radius: 1.25rem;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    
    #use-cases .cs-case-content {
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      flex-grow: 1;
    }
    
    #use-cases .cs-case-title {
      font-size: 1.5rem;
      margin: 0;
      color: var(--headerColor);
      font-weight: 700;
