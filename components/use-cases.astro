---
// Featured case studies that appear on homepage
const featuredCases = [
  {
    slug: "sales-analytics-logistics",
    title: "Real-Time Sales Analytics for Logistics Company",
    category: "Data Analysis",
    excerpt: "Transformed a logistics company's sales operations by aggregating data from multiple sources into real-time KPI dashboards. Enabled data-driven decision-making and identification of the most profitable opportunities instantly.",
    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&q=80&fm=webp",
    results: [
      { metric: "Real-time", description: "KPI visibility" },
      { metric: "100%", description: "Data consolidation" },
      { metric: "40%", description: "Faster insights delivery" }
    ],
    technologies: ["PowerBI", "AWS", "Data Pipelines"]
  },
  {
    slug: "enterprise-network-modernization",
    title: "Enterprise Network Modernization with Ubiquiti UniFi",
    category: "IT Consulting",
    excerpt: "Successfully migrated a company from legacy network hardware to cutting-edge Ubiquiti UniFi infrastructure with full WiFi 6 coverage. Achieved seamless connectivity across office and workshop areas.",
    image: "https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=800&q=80&fm=webp",
    results: [
      { metric: "100%", description: "Network coverage" },
      { metric: "WiFi 6", description: "Latest standard deployed" },
      { metric: "Zero", description: "Downtime during migration" }
    ],
    technologies: ["Ubiquiti UniFi", "WiFi 6", "Network Architecture"]
  },
  {
    slug: "wordpress-migration-project",
    title: "Enterprise WordPress Migration & Go-Live Management",
    category: "Project Management",
    excerpt: "Orchestrated a complex website migration from an unmaintained custom platform to WordPress 7. Managed years of data migration, backend server setup on OVH EU cloud, and coordinated seamless go-live execution.",
    image: "https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=800&q=80&fm=webp",
    results: [
      { metric: "7 years", description: "Data successfully migrated" },
      { metric: "EU Cloud", description: "OVH VM deployment" },
      { metric: "Zero", description: "Data loss incidents" }
    ],
    technologies: ["WordPress 7", "OVH Cloud", "VM Management"]
  },
  {
    slug: "erp-chatbot-integration",
    title: "AI-Powered ERP Chatbot with Natural Language Queries",
    category: "Digital Solutions",
    excerpt: "Developed an intelligent Slack bot integrated with customer's SAP ERP system, enabling employees to query complex business data using natural language. Powered by OpenAI API for intuitive interactions.",
    image: "https://images.unsplash.com/photo-1531746790731-6c087fecd65a?w=800&q=80",
    results: [
      { metric: "Natural", description: "Language queries" },
      { metric: "SAP", description: "ERP integration" },
      { metric: "Instant", description: "Data retrieval" }
    ],
    technologies: ["Slack SDK", "OpenAI API", "SAP Integration"]
  }
];
---

<section id="use-cases">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">Use Cases</span>
      <h2 class="cs-title">Real Projects, Real Results</h2>
      <p class="cs-text">
        Explore our portfolio of successful projects across IT consulting, data analysis, and digital solutions. 
        See how we've helped businesses transform their operations and achieve measurable results.
      </p>
    </div>
    <div class="cs-cases-grid">
      
      {featuredCases.map(caseStudy => (
        <article class="cs-case-card">
          <a href={`/use-cases/${caseStudy.slug}`} class="cs-case-link">
            <div class="cs-case-image">
              <img 
                src={caseStudy.image}
                alt={caseStudy.title}
                loading="lazy"
                decoding="async"
              />
              <div class="cs-case-tag">{caseStudy.category}</div>
            </div>
            <div class="cs-case-content">
              <h3 class="cs-case-title">{caseStudy.title}</h3>
              <p class="cs-case-description">{caseStudy.excerpt}</p>
              <ul class="cs-case-results">
                {caseStudy.results.map(result => (
                  <li><strong>{result.metric}</strong> {result.description}</li>
                ))}
              </ul>
              <div class="cs-case-tech">
                {caseStudy.technologies.map(tech => (
                  <span class="cs-tech-badge">{tech}</span>
                ))}
              </div>
            </div>
          </a>
        </article>
      ))}

    </div>
    <div class="cs-view-all">
      <a href="/use-cases" class="cs-view-all-button">View All Case Studies →</a>
    </div>
  </div>
</section>

<style>
  /* Mobile - 360px */
  @media only screen and (min-width: 0rem) {
    #use-cases {
      padding: var(--sectionPadding);
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      position: relative;
    }
    
    #use-cases .cs-container {
      width: 100%;
      max-width: 80rem;
      margin: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: clamp(3rem, 6vw, 4rem);
    }
    
    #use-cases .cs-content {
      text-align: center;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    
    #use-cases .cs-topper {
      font-size: var(--topperFontSize);
      line-height: 1.2em;
      text-transform: uppercase;
      text-align: inherit;
      letter-spacing: 0.1em;
      font-weight: 700;
      color: var(--primary);
      margin-bottom: 0.25rem;
      display: block;
    }
    
    #use-cases .cs-title {
      font-size: var(--headerFontSize);
      font-weight: 900;
      line-height: 1.2em;
      text-align: inherit;
      max-width: 43.75rem;
      margin: 0 0 1rem 0;
      color: var(--headerColor);
      position: relative;
    }
    
    #use-cases .cs-text {
      font-size: var(--bodyFontSize);
      line-height: 1.5em;
      text-align: inherit;
      width: 100%;
      max-width: 40.625rem;
      margin: 0;
      color: var(--bodyTextColor);
    }
    
    #use-cases .cs-cases-grid {
      width: 100%;
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    #use-cases .cs-case-card {
      background: white;
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: 1px solid #e9ecef;
      display: flex;
      flex-direction: column;
    }
    
    #use-cases .cs-case-card:hover {
      transform: translateY(-10px);
