<!doctype html>
<html lang="en" id="home">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hero Section with Parallax and Zoom Effect</title>
  </head>
  <body>
    <section class="hero">
      <div class="hero-bg">
        <video
          class="hero-video"
          muted
          playsinline
          preload="auto"
          id="heroVideo"
          style="opacity: 0;"
        >
          <source src="/DigitalVideo.mp4" type="video/mp4" media="(min-width: 768px)">
          Your browser does not support the video tag.
        </video>
      </div>

      <!-- IMMEDIATE inline script to reset video BEFORE DOMContentLoaded -->
      <script is:inline>
        (function() {
          // Reset video position IMMEDIATELY - runs as soon as script is parsed
          const video = document.getElementById('heroVideo');
          if (video) {
            video.currentTime = 0;
          }
        })();
      </script>

      <div class="hero-content">
        <h1 class="hero-title">
          Digital Solutions & IT Consulting for Your Business Success
        </h1>
        <p class="hero-subtitle">Expert digital services, project management solutions, and networking solutions to transform your business</p>
        <div class="hero-buttons">
          <button class="hero-button primary" onclick="openContactModal()">Get Started Today</button>
          <button class="hero-button secondary" onclick="location.href='#services-343'">Discover Our Services</button>
        </div>
      </div>
    </section>
    
    <script>
      // Main video control script with fade-in for ultra-smooth start
      document.addEventListener('DOMContentLoaded', function() {
        const videoElement = document.getElementById('heroVideo');
        if (!videoElement) return;

        const video = videoElement as HTMLVideoElement;

        // CRITICAL: Reset to frame 0 immediately (redundant but ensures reset)
        video.currentTime = 0;

        // Remove loop - we'll handle ending manually
        video.removeAttribute('loop');

        // Error handling - fallback to poster if video fails
        video.addEventListener('error', function(e) {
          console.error('Video failed to load:', e);
          video.style.display = 'none';
        });

        // When video has enough data loaded and is at frame 0, fade it in
        function handleVideoReady() {
          // Ensure we're at frame 0 before showing
          if (video.currentTime > 0.1) {
            video.currentTime = 0;
          }

          // Fade in video smoothly
          video.style.transition = 'opacity 0.6s ease-in';
          video.style.opacity = '1';

          // Start playback
          tryPlay();
        }

        // Retry logic for autoplay (handles browsers that block autoplay)
        let playAttempts = 0;
        const maxAttempts = 3;

        function tryPlay() {
          const playPromise = video.play();

          if (playPromise !== undefined) {
            playPromise
              .then(() => {
                console.log('Video playing successfully');
              })
              .catch((error: unknown) => {
                playAttempts++;

                if (playAttempts < maxAttempts) {
                  console.log('Video play attempt', playAttempts, 'failed, retrying...');
                  setTimeout(tryPlay, 500);
                } else {
                  console.log('Video play failed after', maxAttempts, 'attempts');
                  // Show video anyway even if autoplay fails
                  video.style.transition = 'opacity 0.6s ease-in';
                  video.style.opacity = '1';
                }
              });
          }
        }

        // Wait for video to be ready at frame 0 before showing
        if (video.readyState >= 2) {
          // HAVE_CURRENT_DATA or better - at least first frame loaded
          handleVideoReady();
        } else {
          video.addEventListener('loadeddata', handleVideoReady, { once: true });
        }

        // Stop on last frame when video ends (keeps final frame visible)
        video.addEventListener('ended', function() {
          video.pause();
          video.currentTime = video.duration;
        });
      });
    </script>
  </body>
</html>

